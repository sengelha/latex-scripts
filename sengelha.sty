% \headfoot{left}{middle}{right} -- set up page headers and footers
%       left    -- left header item
%       middle  -- middle header item
%       right   -- right header item
%
%  Ex: \headers{CS 273 Fall 2002}{Homework 0 (due ...)}{Steven Engelhardt\\(sengelha@uiuc.edu)}
\newcommand{\headfoot}[3]{
   \pagestyle{fancy}
   \headheight 12pt
   \headsep 12pt
   \lhead{\textbf{#1}}
   \chead{\textbf{#2}}
   \rhead{\textbf{#3}}
   \renewcommand{\headrulewidth}{0.3pt}
}

\def\QED{\ensuremath{{\square}}}
\def\markatright#1{\leavevmode\unskip\nobreak\quad\hspace*{\fill}{#1}}

% Standard solution environment
\newenvironment{solution}[1][\solutionname]{\par
  \normalfont \topsep6\p@\@plus6\p@\relax
  \trivlist
  \item[\hskip\labelsep
        \itshape
    #1\@addpunct{.}]\ignorespaces
}{%
  \popQED\endtrivlist\@endpefalse
}
% Solution environment with a newline
\newenvironment{solution*}[1][\solutionname]{\par
  \normalfont \topsep6\p@\@plus6\p@\relax
  {\textbf #1}\@addpunct{:}
}{%
  \popQED\@endpefalse
}
\newcommand{\solutionname}{Solution}

